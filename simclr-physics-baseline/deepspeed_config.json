{
  "train_batch_size": 128,
  "train_micro_batch_size_per_gpu": 8,
  "gradient_accumulation_steps": 2,

  "optimizer": {
    "type": "AdamW",
    "torch_adam": true,
    "params": {
      "lr": 1e-4,
      "weight_decay": 0.05,
      "betas": [0.9, 0.999],
      "eps": 1e-8
    }
  },

  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
      "total_num_steps": 50000,
      "warmup_num_steps": 1000,
      "warmup_type": "linear"
    }
  },

  "zero_optimization": {
    "stage": 1,
    "overlap_comm": true,
    "contiguous_gradients": true,
    "allgather_partitions": true,
    "allgather_bucket_size": 268435456,
    "reduce_scatter": false,
    "reduce_bucket_size": 268435456,
    "cpu_offload": false
  },

  "fp16": {
    "enabled": true,
    "initial_scale_power": 12,
    "loss_scale_window": 1000,
    "hysteresis": 1,
    "min_loss_scale": 1,
    "auto_cast": false
  },

  "gradient_clipping": 1.0,
  "steps_per_print": 10,
  "wall_clock_breakdown": false,
  "dump_state": false,
  "flops_profiler": {
    "enabled": false
  }
}
